<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayout"
                      android:orientation="vertical"
                      android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/header_dr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Dr. Arun Swaminathan"
                android:textAlignment="gravity"
                android:textAppearance="@style/Klassy_TextStyle_Title"
                android:textStyle="italic|bold"/>

            <TextView
                android:id="@+id/header_dr_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Shivajinagar, Behind Esquare"
                android:textAlignment="gravity"
                android:textStyle="bold"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/accent_brown"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>